#!/usr/bin/env bash
# This script configures Nginx to listen on port 80 and returns a web page with HTTP 200 status

# Install Nginx if not already installed
apt-get update
apt-get -y install nginx

# Modify Nginx configuration to listen on port 80
sed -i 's/listen 80 default_server;/listen 80;/g' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart

# Ensure Nginx is running and listening on port 80
nginx_status=$(curl -s -o /dev/null -w "%{http_code}" localhost)
if [ $nginx_status -eq 200 ]; then
    echo "Nginx is running and returning HTTP 200 status on port 80"
else
    echo "Nginx is not running or not returning HTTP 200 status on port 80"
    exit 1
fi

